{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module"
    },
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],
    "globals": {
      "module": true,
      "__SERVER_RENDERING": true
    },
    "rules": {
        "indent": [
            "warn",
            2
        ],
        "no-unused-vars": [
            "warn",
             { "varsIgnorePattern": "^React$" }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-vars": 2,
        "no-console": [
            "warn",
            {
                "allow": ["warn", "error"]
            }
        ]
    }
}
